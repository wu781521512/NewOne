<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/find_white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/most_data_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/most_data_big_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="九寨沟的凤九"
            android:textColor="@color/find_white"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/most_data_small_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/most_data_big_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="四川色就分手了的积分乐山大佛"
            android:textColor="@color/find_white"
            android:textSize="14sp"/>
    </RelativeLayout>


    <com.example.mrwuchao.newone.views.MostRecycler
        android:id="@+id/most_data_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">
    </com.example.mrwuchao.newone.views.MostRecycler>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/most_data_see_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/most_data_see_time_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:src="@mipmap/ic_desc"/>

            <TextView
                android:id="@+id/most_data_see_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="红叶观赏石件：10学下旬到"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/most_data_best_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/most_data_best_time_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:src="@mipmap/ic_poiview_best_month"/>

            <TextView
                android:id="@+id/most_data_best_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="红叶观赏石件：10学下旬到"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/most_data_miaosu_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/most_data_miaosu_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|left"
                android:padding="8dp"
                android:src="@mipmap/ic_poiview_desc"
                />

            <TextView
                android:id="@+id/most_data_miaosu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="红叶观赏石件：10学下旬到放的时间放假撒到了房间里的就是垃圾发生的发生地方"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/find_hui"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/most_record"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/image_record_comment_write"
            android:padding="12dp"/>
        <ImageView
            android:id="@+id/most_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_share"
            android:padding="12dp"/>
    </LinearLayout>
</LinearLayout>