<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/journey_lv">

        <ImageView
            android:id="@+id/journey_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:padding="2dp"
            android:src="@mipmap/icon_camera_upload"
            />

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/journey_magic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/journey_camera"
            >
        </net.lucode.hackware.magicindicator.MagicIndicator>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/journey_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>