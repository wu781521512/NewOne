<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/qinhui"
              android:orientation="vertical">
    <com.example.mrwuchao.newone.views.MineScrollView
        android:id="@+id/mine_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mine_bk"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/default_theme_image_bk"/>

                <ImageButton
                    android:id="@+id/mine_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/touming"
                    android:src="@mipmap/icon_personal_message"/>

                <ImageView
                    android:id="@+id/mine_touxiang"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    android:src="@mipmap/icon_personal_login_default"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mine_touxiang"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="帅哥一号"
                    android:textColor="@color/find_white"
                    android:textSize="16sp"
                    />

                <Button
                    android:id="@+id/mine_login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mine_touxiang"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/mine_login"
                    android:text="登录"
                    android:textColor="@color/find_white"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/find_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mine_guanzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="关注"/>
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/qianhui"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mine_fensi"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="粉丝"/>
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/qianhui"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mine_youli"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="游历"/>
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/qianhui"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mine_zanshang"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="赞赏"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:background="@color/find_white"
                android:drawableLeft="@mipmap/setting_my_comment"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/setting_arrow_right"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="我的点评"
                android:textColor="@color/mine_black"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="1dp"
                android:background="@color/find_white"
                android:drawableLeft="@mipmap/setting_wait_comment"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/setting_arrow_right"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="待点评"
                android:textColor="@color/mine_black"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:background="@color/find_white"
                android:drawableLeft="@mipmap/setting_record"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/setting_arrow_right"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="我的记录"
                android:textColor="@color/mine_black"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="1dp"
                android:background="@color/find_white"
                android:drawableLeft="@mipmap/setting_trip"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/setting_arrow_right"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="我的行程"
                android:textColor="@color/mine_black"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="1dp"
                android:background="@color/find_white"
                android:drawableLeft="@mipmap/setting_fav"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/setting_arrow_right"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="我的收藏"
                android:textColor="@color/mine_black"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:background="@color/find_white"
                android:drawableLeft="@mipmap/setting_share"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/setting_arrow_right"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="分享掌途给朋友"
                android:textColor="@color/mine_black"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:background="@color/find_white"
                android:drawableLeft="@mipmap/icon_to_auth"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/setting_arrow_right"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="申请认证"
                android:textColor="@color/mine_black"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="1dp"
                android:background="@color/find_white"
                android:drawableLeft="@mipmap/icon_setting"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/setting_arrow_right"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="设置"
                android:textColor="@color/mine_black"
                android:textSize="18sp"/>
        </LinearLayout>
    </com.example.mrwuchao.newone.views.MineScrollView>

</LinearLayout>