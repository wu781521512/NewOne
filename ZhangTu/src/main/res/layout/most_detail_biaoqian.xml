<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/most_detail_biaoqian_linear"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="8dp"
              android:background="@color/find_white"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:text="景区标签"
        android:textColor="@color/text_black"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="最实用的兴趣标签"
        android:textSize="16sp"/>

    <include layout="@layout/most_detail_view"/>

    <HorizontalScrollView
        android:id="@+id/most_detail_biaoqian_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
            <com.example.mrwuchao.newone.views.MyLiuViewGroup
                android:id="@+id/most_detail_myliu"
                android:layout_width="wrap_content"
                android:layout_height="140dp">
            </com.example.mrwuchao.newone.views.MyLiuViewGroup>
    </HorizontalScrollView>
    <include layout="@layout/most_detail_view"/>
    <TextView
        android:id="@+id/most_detail_tie_biaoqian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="贴标签"
        android:textColor="@color/journey_lv"
        android:textSize="16sp"
        />
</LinearLayout>